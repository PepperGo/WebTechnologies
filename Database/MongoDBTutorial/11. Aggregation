db.employees.aggregate([{$group:{_id:"$Gender",Total: {$sum : 1}}}])
//
{ 
    "_id" : "Female", 
    "Total" : 3.0
}
{ 
    "_id" : "Male", 
    "Total" : 5.0
}

db.employees.aggregate([{$group:{_id:"$FirstName",Num: {$sum : 1}}}])

{ 
    "_id" : "George", 
    "Num" : 1.0
}
{ 
    "_id" : "Felicia", 
    "Num" : 1.0
}
{ 
    "_id" : "Ethan", 
    "Num" : 1.0
}
{ 
    "_id" : "Hannah", 
    "Num" : 1.0
}
{ 
    "_id" : "Chris", 
    "Num" : 1.0
}
{ 
    "_id" : "Brian", 
    "Num" : 1.0
}
{ 
    "_id" : "Debbie", 
    "Num" : 1.0
}
{ 
    "_id" : "Andrew", 
    "Num" : 1.0
}

db.employees.aggregate([{$group:{_id:"$Gender",MaxAge: {$max : "$Age"}}}])
//
{ 
    "_id" : "Female", 
    "MaxAge" : "33"
}
{ 
    "_id" : "Male", 
    "MaxAge" : "45"
}


db.employees.aggregate([{$group:{_id:"$Gender",MaxAge: {$min : "$Age"}}}])
//
{ 
    "_id" : "Female", 
    "MaxAge" : "26"
}
{ 
    "_id" : "Male", 
    "MaxAge" : "27"
}

